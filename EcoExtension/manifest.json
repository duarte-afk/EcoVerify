{
  "manifest_version": 3,
  "name": "Eco Verify",
  "version": "1.1",
  "description": "Verificamos se a empresa por trás do site é ecologicamente correta.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}